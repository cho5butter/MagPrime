<Application
    x:Class="MagPrime.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI"
    xmlns:media="using:Microsoft.UI.Xaml.Media">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
                <toolkit:ToolkitResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Modern WinUI 3 Design System -->
            <!-- Mica Background for Windows 11 -->
            <media:MicaBackdrop x:Key="MicaBackdrop" Kind="BaseAlt" />

            <!-- Acrylic Fallback for older systems -->
            <AcrylicBrush x:Key="AcrylicFallback"
                          BackgroundSource="Backdrop"
                          TintColor="{ThemeResource SystemChromeMediumColor}"
                          TintOpacity="0.5"
                          FallbackColor="{ThemeResource SystemChromeMediumColor}" />

            <!-- Modern Card Styles -->
            <media:AcrylicBrush x:Key="CardBrush"
                                BackgroundSource="Backdrop"
                                TintColor="{ThemeResource CardBackgroundFillColorSecondary}"
                                TintOpacity="0.8"
                                FallbackColor="{ThemeResource CardBackgroundFillColorSecondary}" />

            <media:AcrylicBrush x:Key="CardHoverBrush"
                                BackgroundSource="Backdrop"
                                TintColor="{ThemeResource CardBackgroundFillColorTertiary}"
                                TintOpacity="0.9"
                                FallbackColor="{ThemeResource CardBackgroundFillColorTertiary}" />

            <!-- Spacing and Layout -->
            <Thickness x:Key="CardPadding">24</Thickness>
            <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
            <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>

            <!-- Shadow Definitions -->
            <Shadow x:Key="CardShadow"
                    BlurRadius="32"
                    Opacity="0.3"
                    Color="{ThemeResource ShadowColor}"
                    OffsetX="0"
                    OffsetY="8" />

            <Shadow x:Key="ElevatedShadow"
                    BlurRadius="64"
                    Opacity="0.4"
                    Color="{ThemeResource ShadowColor}"
                    OffsetX="0"
                    OffsetY="16" />

            <!-- Animation Durations -->
            <x:Duration x:Key="FastDuration">0:0:0.167</x:Duration>
            <x:Duration x:Key="NormalDuration">0:0:0.250</x:Duration>
            <x:Duration x:Key="SlowDuration">0:0:0.367</x:Duration>
        </ResourceDictionary>
    </Application.Resources>
</Application>
